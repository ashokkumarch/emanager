<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>Blue Bells</display-name>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>com.aakruthi.bluebells.rest</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/webApplicationContext.xml</param-value>
	</context-param>
	
	<listener>
    <listener-class>
      org.springframework.web.context.ContextLoaderListener
    </listener-class>
  </listener>

	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>FieldServlet</servlet-name>
		<servlet-class>com.akrantha.bluebells.app.servlet.FieldServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>EntityServlet</servlet-name>
		<servlet-class>com.akrantha.bluebells.app.servlet.EntityServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>AssetServlet</servlet-name>
		<servlet-class>com.akrantha.bluebells.app.servlet.AssetServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

    <servlet>
        <servlet-name>WorkflowServlet</servlet-name>
        <servlet-class>com.akrantha.bluebells.app.servlet.WorkflowServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ServiceServlet</servlet-name>
        <servlet-class>com.akrantha.bluebells.app.servlet.ServiceServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>FieldServlet</servlet-name>
		<url-pattern>/fields/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EntityServlet</servlet-name>
		<url-pattern>/entities/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AssetServlet</servlet-name>
		<url-pattern>/assets/*</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>WorkflowServlet</servlet-name>
        <url-pattern>/workflows/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServiceServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>

</web-app>
